{
    "project_name": "Package Name",
    "caf": false,
    "__readable_name": "{% if cookiecutter.caf %}CAF.{% endif %}{{ cookiecutter.project_name|remove_prefix('caf.') }}",
    "package_name": "{% if cookiecutter.caf %}caf.{% endif %}{{ cookiecutter.project_name|pkg_name(True) }}",
    "project_slug": "{% if cookiecutter.caf %}caf.{% endif %}{{ cookiecutter.project_name|repo_name(True) }}",
    "author": "Transport for the North",
    "github_org": "{{ cookiecutter.author|repo_name }}",
    "github_url": "https://github.com/{{ cookiecutter.github_org }}/{{ cookiecutter.project_slug }}",
    "project_maintainers": "name (GitHub Username); name (GitHub Username)",
    "description": "Package description",
    "init_git": false,
    "push_repository": false,
    "_template_details": "filled by pre_prompt hook",
    "__pkg_folder": "{{ cookiecutter.package_name.replace('.', '/') }}",
    "_copy_without_render": [
        ".github/workflows/linting.yml",
        ".github/workflows/tests.yml",
        "docs/source/_templates/autosummary"
    ],
    "_jinja2_env_vars": {
        "lstrip_blocks": true,
        "trim_blocks": true
    },
    "_extensions": [
        "local_extensions.pkg_name",
        "local_extensions.repo_name",
        "local_extensions.remove_prefix"
    ],
    "__prompts__": {
        "project_name": "Human-Readable Project Name",
        "project_maintainers": "Name(s) and GitHub Usernames, of Project Maintainers",
        "caf": "CAF package?",
        "description": "Brief package description",
        "author": "Author",
        "package_name": "Full Package Name",
        "project_slug": "Full Repository Name",
        "github_org": "GitHub Organisation Account",
        "github_url": "GitHub Source Code URL",
        "init_git": "Initialise local git repository?",
        "push_repository": "Push repository to GitHub? An empty GitHub repository must exist."
    }
}
